{
    "name": "kevinpapst/tabler-bundle-demo",
    "license": "MIT",
    "description": "Demo application to showcase the Tabler Bundle",
    "type": "project",
    "require": {
        "php": "^8.2",
        "composer/package-versions-deprecated": "^1.11.99",
        "erusev/parsedown": "@stable",
        "kevinpapst/tabler-bundle": "dev-main",
        "knplabs/knp-menu-bundle": "@stable",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/intl": "*",
        "symfony/runtime": "*",
        "symfony/security-bundle": "*",
        "symfony/stopwatch": "*",
        "symfony/translation": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/webpack-encore-bundle": "*",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "@stable",
        "phpstan/phpstan": "@stable",
        "symfony/debug-bundle": "*",
        "symfony/web-profiler-bundle": "*"
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "linting": [
            "bin/console lint:yaml config --parse-tags",
            "bin/console lint:twig templates --show-deprecations",
            "bin/console lint:xliff translations"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse src/ --level=5"
        ],
        "codestyle": "vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress=none",
        "codestyle-fix": "vendor/bin/php-cs-fixer fix"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    }
}
